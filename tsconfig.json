{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": false,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		},
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"lib": ["ESNext", "DOM", "DOM.Iterable"]
	},
	"include": ["src/**/*", "app.ts"],
	"exclude": ["node_modules"]
}
